#!/bin/bash

cargo fmt --all -- --config format_code_in_doc_comments=true

buildargs=(
    "-p coinstr-core"
    "-p coinstr-core --features reserves"
    "-p coinstr-protocol"
    "-p coinstr-sdk"
    "-p coinstr-cli"
    "-p coinstr"
    "-p coinstr-sdk-ffi"
)

for arg in "${buildargs[@]}"; do
    echo  "Running with '$arg' arg"
    cargo test $arg
    cargo clippy $arg
    echo
done

buildargs=(
    "-p coinstr-core --target wasm32-unknown-unknown"
    "-p coinstr-protocol --target wasm32-unknown-unknown"
)

for arg in "${buildargs[@]}"; do
    echo  "Running with '$arg' arg"
    cargo clippy $arg
    echo
done
